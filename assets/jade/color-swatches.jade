mixin color-swatch(title, color1, color2, color3, color4, color5, classes)
  .swatch(class={[classes]: true})
    .box.box1(style={"background-color": color1})
    .box.box2(style={"background-color": color2})
    .box.box3(style={"background-color": color3})
    .box.box4(style={"background-color": color4})
    .box.box5(style={"background-color": color5})
    .title #{title}

