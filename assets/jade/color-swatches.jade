  script.
    const colorSwatchButtons = document.querySelectorAll("button");
    document.querySelector(`.color-swatch-button-show-all`).style.backgroundColor = `#6886E3`;

    colorSwatchButtons.forEach(btn => {
      btn.addEventListener("click", (ev) => {
        reset()
        // set btn color to active
        ev.target.style.backgroundColor = "#6886E3";

        // display only the ones clicked on
        const specificClass = ev.target.classList[0];
        const classForSwatch = specificClass.split("color-swatch-button-")[1];

        if (classForSwatch === `show-all`) {
          // show all the swatches
          const allSwatches = document.querySelectorAll(".swatch");
          allSwatches.forEach(swatch => swatch.style.display = `block`);          
        } else {
          // display just the ones selected
          const allToSwitch = document.querySelectorAll(`.${classForSwatch}`);
          allToSwitch.forEach(swatch => swatch.style.display = `block`);
        }

      });
    });

    function reset() {
      // hide all the swatches
      const allSwatches = document.querySelectorAll(".swatch");
      allSwatches.forEach(swatch => swatch.style.display = `none`);
      // set all btn colors to non active
      const colorSwatchButtons = document.querySelectorAll("button");
      colorSwatchButtons.forEach(btn => btn.style.backgroundColor = ``);
      document.querySelector(`.color-swatch-button-show-all`).style.backgroundColor = ``;
    }
