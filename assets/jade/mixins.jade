mixin largePicture(src, caption)
  .large-picture-container
    img.large-picture(src=src)
    .picture-caption= caption

mixin linkedPicture(link, src, caption, id, classModifier='photography')
  a.linked-picture-container(href=link id=id)
    img.linked-picture(class=classModifier src=src)
    .linked-description(class=classModifier)= caption
